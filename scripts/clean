#!/usr/bin/env php
<?php

/**
 * Delete user files.
 * 
 * $ scripts/clean [search_pattern] [...]
 *
 */

function pattern_match($str, $patterns) {
  $patterns = implode("|", array_map('preg_quote', $patterns));
  return preg_match("/(" . $patterns . ")/i", $str);
}

define('DS', DIRECTORY_SEPARATOR);
define('ROOT', realpath(dirname(__FILE__) . DS . "..") . DS);
$file_list = Array(
  'Controllers/*',
  'Views/*',
  'Models/*',
  'images/*',
  'stylesheets/*',
  'javascripts/*'
);

$all = false;

$patterns = array_slice($argv, 1);


foreach($file_list as $file) {
  $file = ROOT . $file;
  $files = glob($file);
  if(is_array($files)) {
    foreach($files as $del_file) {
      if(is_file($del_file) && pattern_match($del_file, $patterns)) {
        $yes = $all;
        if(!$all) {
          echo "delete file $del_file ? (y|n|a|q) ";
          $handle = fopen("php://stdin", "r");
          $out = fgets($handle, 80);
          switch($out) {
            case "a\n":
              $all = true;
            case "y\n":
              $yes = true;
              break;
            case "q\n":
              exit;
            case "n\n":
            default:
              break;
          }
          if($yes) {
            echo "rm '$del_file'\n";
            unlink($del_file);
          }
        }
      }
    }
  }
}

touch("stylesheets/application.css");
touch("javascripts/application.js");
